root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = false
max_line_length = off
tab_width = 4
trim_trailing_whitespace = false

[*.{cpp,hpp,cppm}]
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
indent_size = 2
insert_final_newline = true
tab_width = 2
